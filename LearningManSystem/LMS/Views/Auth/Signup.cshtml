@{
  ViewData["Signup"] = "Signup Page";
}

<h1>Sign Up</h1>
<hr />
<div class="col-md-6">
  <form action="/Auth/signupupload">
    <label for="firstname" class="form-label">First Name</label><br>
    <input type="text" id="firstname" name="first" class="form-control form-control-lg" value="sameer"
      placeholder="Enter First Name" required><br>

    <label for="lastname" class="form-label">Last name</label><br>
    <input type="text" id="lastname" name="last" class="form-control form-control-lg" value="pande"
      placeholder="Enter last Name" required><br>

    <label for="email" class="form-label">Email ID</label><br>
    <input type="email" id="email" name="email" class="form-control form-control-lg" value="sameer.pande@transflower.in"
      placeholder="Enter Email Id" required><br>

    <label for="password" class="form-label">Password</label><br>
    <input type="text" id="password" name="password" class="form-control form-control-lg" value="transflower123"
      placeholder="Enter Password" required><br>

    <button type="submit" value="" class="btn btn-warning">Submit Profile</button>
  </form>
</div>
