@{
    ViewData["Forgot"] = "Forgot Password Page";
}

<div class="card text-center" style="width: 300px; margin: auto; margin-top: 100px;">
    <div class="card-header h5 text-white bg-primary">Password Change/ Reset</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email with instructions to reset your password.
        </p>
        <div class="form-outline">
            <label class="form-label" for="typeEmail" style="font-weight: bold; text-align: center;">Email ID</label>
            <input type="email" id="typeEmail" class="form-control my-3" placeholder="Enter Your Email-ID"/>
        </div>
        <a href="/Auth/Login" class="btn btn-warning w-100">Reset password</a>
        <div class="d-flex justify-content-between mt-4">
            @* <a class=""  asp-controller="Auth" asp-action="Login">Login</a> *@
            @* <a class=""  asp-controller="Auth" asp-action="Registration">Register</a> *@
        </div>
    </div>
</div>